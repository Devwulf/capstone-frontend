  "dependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/react-toggle": "^4.0.2",
    "axios": "^0.21.1",
    "react": "^17.0.2",
